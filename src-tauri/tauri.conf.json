{
    "package": {
        "productName": "AI小巴士",
        "version": "1.0.0"
    },
    "tauri": {
        "security": {
            "csp": null,
            "dangerousRemoteDomainIpcAccess": [
                {
                    "domain": "chat.aixbus.com",
                    "windows": [
                        "pake"
                    ],
                    "enableTauriAPI": true
                }
            ]
        },
        "updater": {
            "active": false
        },
        "systemTray": {
            "iconPath": "png/AI小巴士_512.png",
            "iconAsTemplate": true
        },
        "allowlist": {
            "all": true,
            "fs": {
                "all": true,
                "scope": [
                    "$DOWNLOAD/*"
                ]
            }
        }
    },
    "build": {
        "withGlobalTauri": true,
        "devPath": "../dist",
        "distDir": "../dist",
        "beforeBuildCommand": "",
        "beforeDevCommand": ""
    }
}
